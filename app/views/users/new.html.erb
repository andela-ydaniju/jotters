<div>
<%= form_for @user do |f| %>
  <div>
     <%= f.label :name %>
     <%= f.text_field :name %>
  </div>

  <div>
     <%= f.label :password %>
     <%= f.password_field :password %>
  </div>

  <div>
     <%= f.label :password %>
     <%= f.password_field :password_confirmation %>
  </div>


  <div>
     <%= f.submit %>
  </div>
<% end %>
</div>
